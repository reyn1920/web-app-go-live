# Unified Automation Platform - Environment Variables Template
# Copy this file to .env.local for development or configure in production environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:8081
API_PORT=8081
WEB_PORT=8080

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Development (SQLite)
DATABASE_URL=sqlite:///./pastes.db
AUTOMATION_DB_URL=sqlite:///./automation_states.db

# Production (PostgreSQL - recommended)
# DATABASE_URL=postgresql://username:password@host:port/database
# AUTOMATION_DB_URL=postgresql://username:password@host:port/automation_db

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for session management and encryption
SECRET_KEY=your-secret-key-here-change-in-production

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# YOUTUBE API CONFIGURATION
# =============================================================================

# YouTube Data API v3
YOUTUBE_API_KEY=your-youtube-api-key-here
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# YouTube Channel Configuration
YOUTUBE_DEFAULT_CHANNEL=the-right-perspective

# =============================================================================
# CONTENT GENERATION APIs
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Anthropic Claude (Alternative)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Gemini (Alternative)
GOOGLE_API_KEY=your-google-api-key-here

# =============================================================================
# LINLY-TALKER AI CONFIGURATION
# =============================================================================

# Linly-Talker API Configuration
LINLY_TALKER_API_URL=http://localhost:7860
LINLY_TALKER_API_KEY=your-linly-talker-api-key
LINLY_TALKER_MODEL=default

# =============================================================================
# BUSINESS PLATFORM APIS
# =============================================================================

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# =============================================================================
# EMAIL AND NOTIFICATIONS
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# SendGrid (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# SOCIAL MEDIA APIS
# =============================================================================

# Twitter/X API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Facebook/Meta API
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

# LinkedIn API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=GA4-MEASUREMENT-ID

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn-here

# Application Monitoring
MONITORING_ENABLED=true
MONITORING_INTERVAL=60

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Local Storage (Development)
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=104857600

# AWS S3 (Production)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-s3-bucket-name
# AWS_S3_REGION=us-west-2

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

# Redis for caching and session storage
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your-redis-password

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# =============================================================================
# AUTOMATION SETTINGS
# =============================================================================

# Automation Schedule Settings
AUTOMATION_ENABLED=true
AUTOMATION_CHECK_INTERVAL=300
AUTOMATION_MAX_RETRIES=3

# Channel-specific automation
CHANNEL_AUTOMATION_ENABLED=true
CHANNEL_POSTING_SCHEDULE=0 9 * * *

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Mode (development only)
DEBUG=true
FLASK_DEBUG=true

# Hot Reload
HOT_RELOAD=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# SSL Configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Domain Configuration
# DOMAIN=yourdomain.com
# SUBDOMAIN=app

# CDN Configuration
# CDN_URL=https://cdn.yourdomain.com

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Database Backup Settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Backup Storage
# BACKUP_S3_BUCKET=your-backup-bucket
# BACKUP_S3_PREFIX=database-backups/

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
FEATURE_YOUTUBE_AUTOMATION=true
FEATURE_PASTE_MANAGEMENT=true
FEATURE_BUSINESS_PLATFORM=true
FEATURE_DIGITAL_PRODUCTS=true
FEATURE_BOOK_WRITING=true
FEATURE_LINLY_TALKER=true
FEATURE_MARKETING_AUTOMATION=true
FEATURE_ANALYTICS=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords and API keys
# 3. Rotate secrets regularly in production
# 4. Use environment-specific values for each deployment stage
# 5. Consider using a secrets management service for production